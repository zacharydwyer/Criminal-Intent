<?xml version="1.0" encoding="utf-8"?>

<!-- In a RelativeLayout you use layout parameters to arrange child views relative to the root layout and to each other. -->
<!-- This entire layout is used to draw an individual crime list item in the RecyclerView within CrimeListFragment. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/crime_list_item_solved_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/crime_list_item_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/crime_list_item_solved_check_box"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Crime Title"/>

    <TextView
        android:id="@+id/crime_list_item_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/crime_list_item_solved_check_box"
        android:layout_below="@id/crime_list_item_title_text_view"
        android:padding="4dp"
        tools:text="Crime Date"/>

</RelativeLayout>